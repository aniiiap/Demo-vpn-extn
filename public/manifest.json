{
  "manifest_version": 3,
  "name": "Edu VPN Switcher (Educational)",
  "version": "1.1.0",
  "description": "Educational proxy switcher (demo). Sets browser proxy when loaded as an extension.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Edu VPN Switcher"
  },
  "permissions": [
    "proxy",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}